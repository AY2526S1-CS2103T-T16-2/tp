<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="80" GridPane.columnIndex="0">
            <padding>
                <Insets left="10" />
            </padding>
            <HBox spacing="0.5" alignment="CENTER_LEFT">
                <Label fx:id="studentName" styleClass="cell_big_label" />
            </HBox>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label text="Attendance:" styleClass="cell_small_label" />
                <Label fx:id="attendanceLabel" styleClass="cell_small_label" />
                <Label text=" Average participation:" styleClass="cell_small_label" />
                <Label fx:id="participationLabel" styleClass="cell_small_label" />
                <Label text=" Submission:" styleClass="cell_small_label" />
                <Label fx:id="submissionLabel" styleClass="cell_small_label" />
            </HBox>
        </VBox>
    </GridPane>
</HBox>
